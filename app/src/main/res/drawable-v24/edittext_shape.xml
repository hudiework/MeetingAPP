    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />
    <!--设置渐变-->
    <gradient
        android:angle="270"
        android:endColor="#ffffff"
        android:startColor="#6effffff" />
    <stroke
        android:width="1dip"
        android:color="#000" />
</shape>