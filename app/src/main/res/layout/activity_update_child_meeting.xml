<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.demo2.loginsucce_meetingpart.UpdateChildMeetingActivity">


    <TextView
        android:id="@+id/tv_updatechildName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_updatechildMeetName"
        android:layout_alignBottom="@+id/et_updatechildMeetName"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/et_updatechildMeetName"
        android:layout_toStartOf="@+id/et_updatechildMeetName"
        android:text="会议标题" />

    <EditText
        android:id="@+id/et_updatechildMeetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="text" />


    <TextView
        android:id="@+id/tv_updatechildContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_updatechildName"
        android:layout_alignStart="@+id/tv_updatechildName"
        android:layout_below="@+id/et_updatechildMeetName"
        android:layout_marginTop="22dp"
        android:text="会议内容" />

    <EditText
        android:id="@+id/et_updateChildMeetContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_updatechildMeetName"
        android:layout_alignStart="@+id/et_updatechildMeetName"
        android:layout_below="@+id/et_updatechildMeetName"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/tv_updateChildStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/tv_updatechildContent"
        android:layout_alignStart="@+id/tv_updatechildContent"
        android:layout_below="@+id/et_updateChildMeetContent"
        android:layout_marginTop="61dp"
        android:text="开始时间" />

    <TextView
        android:id="@+id/tv_updateChildMeetStart"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_updateChildStart"
        android:layout_alignBottom="@+id/tv_updateChildStart"
        android:layout_alignEnd="@+id/btn_updateChildStartTime"
        android:layout_alignLeft="@+id/et_updateChildMeetContent"
        android:layout_alignRight="@+id/btn_updateChildStartTime"
        android:layout_alignStart="@+id/et_updateChildMeetContent"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_updateChildStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_updateChildMeetContent"
        android:layout_alignStart="@+id/et_updateChildMeetContent"
        android:layout_below="@+id/et_updateChildMeetContent"
        android:layout_weight="1"
        android:text="选择日期" />

    <Button
        android:id="@+id/btn_updateChildStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/et_updateChildMeetContent"
        android:layout_alignRight="@+id/et_updateChildMeetContent"
        android:layout_below="@+id/et_updateChildMeetContent"
        android:layout_weight="1"
        android:text="选择时间" />






    <TextView
        android:id="@+id/tv_updatechildPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_updateChildMeetPlace"
        android:layout_alignBottom="@+id/et_updateChildMeetPlace"
        android:layout_alignLeft="@+id/tv_updateChildStart"
        android:layout_alignStart="@+id/tv_updateChildStart"
        android:text="会议地点"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_updateChildMeetPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_updateChildMeetStart"
        android:layout_alignStart="@+id/tv_updateChildMeetStart"
        android:layout_below="@+id/tv_updateChildMeetStart"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="text" />


    <TextView
        android:id="@+id/tv_updatechildGuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_updatechildMeetGuest"
        android:layout_alignBottom="@+id/et_updatechildMeetGuest"
        android:layout_alignLeft="@+id/tv_updatechildPlace"
        android:layout_alignStart="@+id/tv_updatechildPlace"
        android:text="会议主持人" />

    <EditText
        android:id="@+id/et_updatechildMeetGuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_updateChildMeetPlace"
        android:layout_alignStart="@+id/et_updateChildMeetPlace"
        android:layout_below="@+id/et_updateChildMeetPlace"
        android:ems="10"
        android:inputType="text" />


    <Button
        android:id="@+id/btn_updatechildcancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_updatechildGuest"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tv_updatechildGuest"
        android:layout_marginBottom="109dp"
        android:text="取消" />

    <Button
        android:id="@+id/btn_updatechildnext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_updatechildcancel"
        android:layout_alignBottom="@+id/btn_updatechildcancel"
        android:layout_alignLeft="@+id/btn_updateChildStartTime"
        android:layout_alignStart="@+id/btn_updateChildStartTime"
        android:text="确定" />
</RelativeLayout>
