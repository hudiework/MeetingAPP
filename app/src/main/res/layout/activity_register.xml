<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#ddd"
    tools:context="com.example.dell.demo2.loginandregister.activity.RegisterActivity"
    tools:layout_editor_absoluteY="81dp">
    <!--android:background="#62ade7"-->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_personal_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/default_person"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!-- android:background="@null"-->
        <EditText
            android:id="@+id/et_registerphone"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="176dp"
            android:layout_weight="1"
            android:hint="  手机号码"
            android:inputType="phone"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_verify_code1"
            android:layout_width="162dp"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:hint="  6位验证码"
            android:inputType="number"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/et_registerphone"
            app:layout_constraintTop_toBottomOf="@+id/et_registerphone" />

        <Button
            android:id="@+id/btn_send1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:text="发送验证码"
            android:textColor="#f18d35"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/radius_shape"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/et_verify_code1"
            app:layout_constraintEnd_toEndOf="@+id/et_registerphone"
            app:layout_constraintTop_toTopOf="@+id/et_verify_code1" />

        <EditText
            android:id="@+id/et_registerpwd"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:hint="  输入密码"
            android:inputType="textPassword"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/et_registerphone"
            app:layout_constraintStart_toStartOf="@+id/et_registerphone"
            app:layout_constraintTop_toBottomOf="@+id/et_verify_code1" />


        <EditText
            android:id="@+id/et_registerpwd2"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:hint="  确认密码"
            android:inputType="textPassword"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_registerpwd" />


        <Button
            android:id="@+id/btn_register"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="270dp"
            android:layout_height="52dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_shape"
            android:text="注   册 "
            android:textColor="#eee"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/et_registerpwd2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/et_registerpwd2"
            app:layout_constraintTop_toBottomOf="@+id/et_registerpwd2" />
        <!--android:textColor="#077fdc"-->
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>