<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dell.demo2.worker.ScheduleHotelActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_hotel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="3"
        android:textSize="25dp"
        android:textColor="#363434"
        android:text="酒店名" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textColor="#363434"
            android:text="评分："/>
        <TextView
            android:id="@+id/tv_hotel_eval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ec3c3c"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="20"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_hotel_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="18dp"
        android:textColor="#555"
        android:text="房间类型"/>
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_hotel_describ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        android:text="干净整洁....."/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="单价："/>

        <TextView
            android:id="@+id/tv_hotel_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="900 元/天"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="剩余："/>

        <TextView
            android:id="@+id/tv_remain_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ec3c3c"
            android:textSize="16dp"
            android:text="7"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="间"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="联系电话:"/>
        <TextView
            android:id="@+id/tv_hotel_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19801023456"
            />
    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:text="请选择数量："/>


    <com.example.dell.demo2.worker.AmountView
        android:id="@+id/amount_view"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_centerInParent="true"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        app:btnTextSize="14sp"
        app:btnWidth="36dp"
        app:tvWidth="50dp"/>

</LinearLayout>
    <Button
        android:id="@+id/btn_schedule_hotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="预约" />




</LinearLayout>
