<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:NoticeView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dell.demo2.worker.WorkerActivity">

    <com.example.dell.demo2.billview.NoticeView
        android:id="@+id/notice_view"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:foregroundGravity="center"
        android:background="#fffacd"
        textSize = "14sp"
        textColor = "#000">
        <!--NoticeView:textSize="14sp"
        NoticeView:textColor="#000000"-->

    </com.example.dell.demo2.billview.NoticeView>

    <Button
        android:id="@+id/btn_zxing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="扫码签到"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="111dp" />

    <Button
        android:id="@+id/btn_scheHotel"
        android:layout_width="89dp"
        android:layout_height="45dp"
        android:text="预订酒店"
         />

    <Button
        android:id="@+id/btn_schePlace"
        android:layout_width="89dp"
        android:layout_height="45dp"
        android:text="预订场地"
        />

    <Button
        android:id="@+id/btn_scheCar"
        android:layout_width="89dp"
        android:layout_height="45dp"
        android:text="预订车辆"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="工作人员讨论区"
        />

    <Button
        android:id="@+id/button4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="坐席解答区"
        />

    <Button
        android:id="@+id/button5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="审批事项"
        app:layout_constraintEnd_toEndOf="@+id/button4"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button6"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="编辑审批"
        app:layout_constraintEnd_toEndOf="@+id/button5"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

</LinearLayout>
